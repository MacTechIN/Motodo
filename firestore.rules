rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user belongs to a specific team
    function isTeamMember(teamId) {
      return isAuthenticated() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId);
    }

    // Helper to check if a team is Premium
    function isPremiumTeam(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)).data.isPremium == true;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /teams/{teamId} {
      allow read: if isTeamMember(teamId) || resource.data.adminUid == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isTeamMember(teamId) && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
        // Freemium: Max 5 members for free teams
        (request.resource.data.memberCount <= 5 || isPremiumTeam(teamId))
      );
      
      // Sharded Counters
      match /counters/{shardId} {
        allow read: if isTeamMember(teamId);
        allow write: if isTeamMember(teamId);
      }

      // Member Stats (Team Pulse)
      match /members/{memberId} {
        allow read: if isTeamMember(teamId);
        // Only Cloud Functions (admin SDK) will write to this, so technically no client write rule needed
        // but for safety/testing we can allow nothing or admin.
      }
    }

    match /todos/{todoId} {
      allow create: if isAuthenticated() && (
        // Freemium: No attachments for free teams
        (request.resource.data.attachmentUrl == null || isPremiumTeam(request.resource.data.teamId))
      );

      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy || 
        (isTeamMember(resource.data.teamId) && resource.data.isSecret == false)
      );

      allow update: if isAuthenticated() && request.auth.uid == resource.data.createdBy && (
        // Freemium: Cannot add attachment to existing todo if not premium
        (request.resource.data.attachmentUrl == null || isPremiumTeam(resource.data.teamId))
      );
      
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.createdBy;

      match /comments/{commentId} {
        allow read, create: if isAuthenticated() && (
          get(/databases/$(database)/documents/todos/$(todoId)).data.createdBy == request.auth.uid || 
          (isTeamMember(get(/databases/$(database)/documents/todos/$(todoId)).data.teamId) && get(/databases/$(database)/documents/todos/$(todoId)).data.isSecret == false)
        );
      }
    }
  }
}
